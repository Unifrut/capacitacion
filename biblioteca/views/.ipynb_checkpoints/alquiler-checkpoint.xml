<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record model="ir.ui.view" id="alquiler_view_form">
            <field name="name">biblioteca.alquiler.form</field>
            <field name="model">biblioteca.alquiler</field>
            <field name="arch" type="xml">
                <form string="Alquiler Form">
                    <sheet>
                        <h1><field name="name"/></h1>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="cliente"/>
                            </group>
                            <group>
                                <field name="fechaI"/>
                                <field name="fechaF"/>
                                <field name="duracion"/>
                            </group>
                            <notebook>
                                <page string="Prestamos">
                                    <field name="clientes_ids"/>
                                    <!--<field name="libros_ids"/>-->
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <record model="ir.ui.view" id="alquiler_view_list">
            <field name="name">biblioteca.alquiler.list</field>
            <field name="model">biblioteca.alquiler</field>
            <field name="arch" type="xml">
                <tree string="Alquiler List">
                    <field name="name"/>
                </tree>
            </field>
        </record>
        
        <record model="ir.ui.view" id="alquiler_view_calendar">
            <field name="name">biblioteca.alquiler.calendar</field>
            <field name="model">biblioteca.alquiler</field>
            <field name="arch" type="xml">
                <calendar string="Calendario de Alquiler"
                          date_start="fechaI"
                          date_stop="fechaF"
                          color="cliente"
                          mode="month">
                    <field name="name"/>
                    <field name="cliente" filters='1' avatar_field='avatar_128'/>
                </calendar>
            </field>
        </record>
    </data>
</odoo>